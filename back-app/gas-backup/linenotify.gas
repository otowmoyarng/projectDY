// LINE Notifyのトークンをここに入力
const LINETOKEN = "slj9Vt9eIOSdC93hPxnCarJKKwrFKK6QMOWK0Y3lzIA";

//LINE Notifyへ通知するためのスクリプト
function testSendLineNotify(){
  sendLineNotify("testSendLineNotifyよりテスト送信");
}
function sendLineNotify(content){
  var token = LINETOKEN;
  var options =
   {
     "method"  : "post",
     "payload" : "message=\n" + content,
     "headers" : {"Authorization" : "Bearer "+ token}
   };
   UrlFetchApp.fetch("https://notify-api.line.me/api/notify", options);
}